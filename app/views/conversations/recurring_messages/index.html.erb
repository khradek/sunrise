<p id="notice"><%= notice %></p>

<h1>Recurring Messages</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>End date</th>
          <th>Start date</th>
          <th>Frequency</th>
          <th>Body</th>
          <th>To</th>
          <th>User</th>
          <th>Conversation</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @recurring_messages.each do |recurring_message| %>
          <tr>
            <td><%= recurring_message.end_date %></td>
            <td><%= recurring_message.start_date %></td>
            <td><%= recurring_message.frequency %></td>
            <td><%= recurring_message.body %></td>
            <td><%= recurring_message.to %></td>
            <td><%= recurring_message.user %></td>
            <td><%= recurring_message.conversation %></td>
            <td><%= link_to 'Show', recurring_message %></td>
            <td><%= link_to 'Edit', edit_recurring_message_path(recurring_message) %></td>
            <td><%= link_to 'Destroy', recurring_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<br>

